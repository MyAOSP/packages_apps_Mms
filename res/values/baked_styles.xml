    <style name="QuickMessageLight" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textAppearance">@style/QuickMessageTextLight</item>
    </style>
    <style name="QuickMessageTextLight" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/qm_light_text</item>
