    </style>
    <style name="QuickMessageTextDark" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/qm_dark_text</item>
        <item name="android:textColorHighlight">@color/qm_holo_blue_light</item>
        <item name="android:textColorHint">@color/qm_hint_text</item>
        <item name="android:textColorLink">@color/qm_link_text</item>
